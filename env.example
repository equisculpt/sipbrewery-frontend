# REDIS_PASSWORD=your_redis_password

# ============================================
# ü§ñ AI/ML Services (Optional)
# ============================================

# OpenAI API (for chatbot)
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx

# Custom ML Model Endpoint
# ML_MODEL_URL=http://localhost:8000
# ML_MODEL_API_KEY=your_ml_api_key

# ============================================
# üìÑ KYC & Document Verification
# ============================================

# Digio E-Sign
# DIGIO_API_KEY=your_digio_api_key
# DIGIO_CLIENT_ID=your_digio_client_id

# Aadhaar Verification
# AADHAAR_API_URL=https://api.aadhaarapi.com
# AADHAAR_API_KEY=your_aadhaar_api_key

# PAN Verification
# PAN_API_URL=https://api.panapi.com
# PAN_API_KEY=your_pan_api_key

# ============================================
# üîß Feature Flags
# ============================================

# Enable/Disable Features
NEXT_PUBLIC_ENABLE_DIGITAL_GOLD=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_REALTIME_UPDATES=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_TAX_REPORTS=true

# Demo Mode (uses mock data)
NEXT_PUBLIC_USE_DEMO_DATA=false

# Show Demo Indicator
NEXT_PUBLIC_SHOW_DEMO_INDICATOR=false

# ============================================
# üåç Environment
# ============================================

# Environment (development, staging, production)
NODE_ENV=development

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# üìù Logging & Debugging
# ============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Enable Debug Mode
DEBUG=false

# ============================================
# üîê CORS Configuration (Backend)
# ============================================

# Allowed Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://sipbrewery.com

# ============================================
# ‚è±Ô∏è Rate Limiting (Backend)
# ============================================

# Rate Limit Window (milliseconds)
# RATE_LIMIT_WINDOW=900000

# Max Requests per Window
# RATE_LIMIT_MAX_REQUESTS=100

